<script>
		var x1 = 0;
		var x2 = 0;
		var y1 = 0;
		var y2 = 0;
		
		var horizontal = [0,0];
		var vertical = [0,0];
		
		$("#header").bind({
			touchstart: function(event){
				event.preventDefault();
          		var orig = event.originalEvent;  
          		x1 = orig.changedTouches[0].pageX;  
          		y1 = orig.changedTouches[0].pageY;
				return false;				
          	},
			touchmove: function(event){
				event.preventDefault();
				var touch = event.originalEvent.touches[0] || event.originalEvent.changedTouches[0];
          		x2 = touch.pageX;  
          		y2 = touch.pageY;  
				var d_x = x2 - x1;
				var d_y = y2 - y1;

				if (d_x < -10){	
					window.location.replace("<%= root_url %>");
				}
				else if (d_x > 10){
					$("#dialog").dialog({
					resizable: false,
					height:140,
					modal: true,
					buttons: {
						"Yes": function() {
							$.ajax({
								beforeSend: function(xhr) {
    								xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'));
  								},
								url: "/signout",
								dataType: 'script',
								type: 'POST'
							});	
							$(this).dialog( "close" );
							window.location.replace("<%= root_url %>");
						},
						"No": function() {
							$( this ).dialog( "close" );
						}
					}
					});
				x1 = 0;
				x2 = 0;
				y1 = 0;
				y2 = 0;
				return false;
			}
     	}
		});
		
		$(".single-tag").bind({
			touchstart: function(event){
				event.preventDefault();
          		var orig = event.originalEvent;  
          		x1 = orig.changedTouches[0].pageX;  
          		y1 = orig.changedTouches[0].pageY;  
				return false;
          	},
			touchmove: function(event){
				event.preventDefault();
				var touch = event.originalEvent.touches[0] || event.originalEvent.changedTouches[0];
          		x2 = touch.pageX;  
          		y2 = touch.pageY;  
				var d_x = x2 - x1;
				var d_y = y2 - y1;

				if (d_x > 5){
					$("#button"+$(event.currentTarget).attr('id')).show();
				}
				x1 = 0;
				x2 = 0;
				y1 = 0;
				y2 = 0;
				return false;
			}
     	});
		
		$(".quick-tag").bind({
			touchstart: function(event){
				event.preventDefault();
          		var orig = event.originalEvent;  
          		x1 = orig.changedTouches[0].pageX;  
          		y1 = orig.changedTouches[0].pageY;
				return false;
          	},
			touchmove: function(event){
				event.preventDefault();
				var touch = event.originalEvent.touches[0] || event.originalEvent.changedTouches[0];
          		x2 = touch.pageX;  
          		y2 = touch.pageY;  
				var d_x = x2 - x1;
				var d_y = y2 - y1;

				if (d_x > 5){
					$("#quick_button"+$(event.currentTarget).attr('id')).show();
				}
				x1 = 0;
				x2 = 0;
				y1 = 0;
				y2 = 0;
				return false;
			}
     	});
		
		
     	
